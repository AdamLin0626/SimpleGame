<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 基礎應用程式主題樣式，繼承自 Material Design 的深色 ActionBar 樣式 -->
    <style name="Theme.SimpleGame" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- 主要品牌顏色（例如：App Bar、按鈕） -->
        <item name="colorPrimary">@color/sub_color</item>

        <!-- 主要品牌顏色的變體（通常應用在狀態列） -->
        <item name="colorPrimaryVariant">@color/main_color</item>

        <!-- 主要顏色上的文字或圖示顏色（例如白字） -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- 次要品牌顏色（例如：浮動按鈕、選取標記等） -->
        <item name="colorSecondary">@color/teal_200</item>

        <!-- 次要品牌顏色的變體 -->
        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- 次要顏色上的文字或圖示顏色 -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- 狀態列顏色（上方通知欄背景） -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- 你可以在這裡自定義其他主題屬性 -->

    </style>
</resources>